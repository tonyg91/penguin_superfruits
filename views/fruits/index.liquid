{% layout "layout.liquid" %} 

{% block content %}
<div>
    <!-- New Fruit Button -->
    <a href="/fruits/new"><button>Create a New Fruit</button></a>

  {% for fruit in fruits %}
  <article>
      <!-- Not using the index anymore it will use th id from the database -->
    <a href="/fruits/{{ fruit._id }}">
      <h2>
        {{fruit.name}} - {% if fruit.readyToEat == true %} Ripe {% else %} Not
        Ripe {% endif %}
      </h2>
    </a>
  </article>
  {% endfor %}
  
</div>
{% endblock %}